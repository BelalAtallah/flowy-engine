{
  "name": "flowy",
  "version": "0.1.0",
  "description": "The minimal javascript library to create flowcharts âœ¨",
  "author": "Alyssa X",
  "license": "MIT",
  "private": false,
  "main": "flowy.js",
  "module": "flowy.mjs",
  "unpkg": "flowy.umd.js",
  "scripts": {
    "dist": "npm version patch && npm run build",
    "build": "rimraf dist && babel src -d dist && cp package.json dist/ && npm run build:web",
    "build:web": "rimraf dist && parcel build src/engine/index.css -o flowy -d dist && microbundle build -o dist -i src/engine -f cjs,umd,es",
    "build:demo": "rimraf demo && parcel build src/demo/index.html -d demo",
    "demo": "rimraf demo && parcel serve src/demo/index.html -d demo --open",
    "demo:watch": "rimraf demo && parcel wath src/demo/index.html -d demo",
    "react": "rimraf react && parcel serve src/react/index.html -d react --open",
    "react:watch": "rimraf react && parcel wath src/react/index.html -d react",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "lint": "standard --fix src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alyssax/flowy.git"
  },
  "keywords": [
    "flowchart",
    "diagrams",
    "javascript",
    "javascript-library",
    "minimal",
    "engine",
    "drag-and-drop",
    "zapier",
    "marketing",
    "marketing-automation"
  ],
  "contributors": [
    "Alyssa X <hi@alyssax.com> (http://alyssax.com/)",
    "Joel Van Horn <joel@joelvanhorn.com> (http://joelvanhorn.com)"
  ],
  "bugs": {
    "url": "https://github.com/alyssax/flowy/issues"
  },
  "homepage": "https://github.com/alyssax/flowy#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-proposal-partial-application": "^7.8.3",
    "@babel/plugin-proposal-throw-expressions": "^7.8.3",
    "@babel/plugin-transform-block-scoping": "^7.8.3",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.8.3",
    "babel-plugin-transform-imports": "^2.0.0",
    "devolution": "^1.1.2",
    "jest": "^24.9.0",
    "microbundle": "^0.11.0",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "standard": "^14.3.1"
  },
  "dependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  }
}
